{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productName": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "productName"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "topProduct": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "characteristics": {
      "type": "json"
    },
    "area": {
      "type": "enumeration",
      "enum": [
        "Equipos de diagnóstico",
        "Equipos de tratamiento / quirúrgicos",
        "Mobiliario médico"
      ]
    }
  }
}
